# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Global Configuration
NODE_ENV=development
LOG_LEVEL=info

# API Gateway Configuration
API_GATEWAY_PORT=3000
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
CORE_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
AUDIT_SERVICE_URL=http://localhost:3005
FEATURE_FLAG_SERVICE_URL=http://localhost:3006

# Authentication Service Configuration
AUTH_SERVICE_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=platform
POSTGRES_USER=platform
POSTGRES_PASSWORD=platform123
POSTGRES_URL=postgresql://platform:platform123@localhost:5432/platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=platform

# Notification Service Configuration
NOTIFICATION_SERVICE_PORT=3004
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@platform.com

# Audit Service Configuration
AUDIT_SERVICE_PORT=3005

# Feature Flag Service Configuration
FEATURE_FLAG_SERVICE_PORT=3006

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Observability Configuration
PROMETHEUS_PORT=9464
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# TLS/SSL Configuration (for production)
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem
TLS_CA_PATH=/path/to/ca.pem

# External Service URLs
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_TIMEOUT=5000

# Feature Flags
FEATURE_NEW_DASHBOARD=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BETA_FEATURES=false

# Monitoring and Alerting
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=15000

# Development Only
DEBUG_MODE=true
ENABLE_SWAGGER_DOCS=true
ENABLE_PLAYGROUND=true
